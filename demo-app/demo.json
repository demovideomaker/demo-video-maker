{
  "name": "Complete App Overview Demo",
  "description": "Comprehensive demo showing navigation and key features across the application",
  "entry": {
    "url": "/",
    "selector": ".main-content",
    "waitTime": 2000
  },
  "interactions": [
    {
      "type": "hover",
      "selector": "[data-testid='quick-stats-users']",
      "waitBeforeMove": 1000,
      "waitAfterClick": 1200,
      "zoomLevel": 1.7,
      "description": "Examine homepage statistics"
    },
    {
      "type": "click",
      "selector": "[data-testid='quick-action-dashboard']",
      "waitBeforeMove": 1200,
      "waitAfterClick": 2000,
      "zoomLevel": 1.8,
      "description": "Navigate to dashboard"
    },
    {
      "type": "wait",
      "waitTime": 1500,
      "description": "Allow page transition"
    },
    {
      "type": "click",
      "selector": "[data-testid='nav-analytics']",
      "waitBeforeMove": 1000,
      "waitAfterClick": 2500,
      "zoomLevel": 1.5,
      "description": "Navigate to analytics"
    },
    {
      "type": "hover",
      "selector": ".chart, [data-testid='chart-container']",
      "waitBeforeMove": 1200,
      "waitAfterClick": 1500,
      "zoomLevel": 1.9,
      "skipIfNotFound": true,
      "description": "Examine analytics charts"
    },
    {
      "type": "click",
      "selector": "[data-testid='nav-users']",
      "waitBeforeMove": 1100,
      "waitAfterClick": 2000,
      "zoomLevel": 1.4,
      "description": "Navigate to user management"
    },
    {
      "type": "scroll",
      "selector": ".table, [data-testid='user-table']",
      "waitBeforeMove": 800,
      "waitAfterClick": 1500,
      "skipIfNotFound": true,
      "description": "Scroll through user table"
    },
    {
      "type": "click",
      "selector": "[data-testid='nav-settings']",
      "waitBeforeMove": 1000,
      "waitAfterClick": 2000,
      "zoomLevel": 1.6,
      "description": "Navigate to settings"
    },
    {
      "type": "click",
      "selector": "[data-testid='nav-home']",
      "waitBeforeMove": 1200,
      "waitAfterClick": 1500,
      "zoomLevel": 1.3,
      "description": "Return to homepage"
    }
  ],
  "effects": {
    "cameraFollow": true,
    "zoomLevel": 1.5,
    "glowEffects": true,
    "clickAnimations": true,
    "mouseMoveSpeed": 55,
    "spotlightEffect": true
  },
  "recording": {
    "duration": 60000,
    "skipErrors": true,
    "outputName": "complete-app-overview"
  },
  "timings": {
    "waitBeforeMove": 1100,
    "waitAfterClick": 1600,
    "waitBetweenSteps": 800,
    "pageLoadWait": 2000
  }
}